import random
actions = ["pierre", "feuille", "ciseaux"]
name = input("Quel est ton prénom ? ")
num_games = int(input("Bonjour {}, combien de manches veux-tu jouer ? ".format(name)))
score_user = 0
score_computer = 0
games_played = 0

while games_played<num_games:
    user_input = input("{}, choisis pierre, feuille ou ciseaux : ".format(name))
    computer_input = random.choice(actions)
    if user_input == "pierre":
        if computer_input == "pierre":
            print("l'ordinateur choisit également pierre, match nul sur cette manche")
        elif computer_input == "feuille":
            print("l'ordinateur choisit feuille, tu as perdu la manche")
            score_computer += 1
        else:
            print("l'ordinateur choisit ciseaux, tu as gagné la manche")
            score_user += 1
        games_played += 1
        print("le score est de {} pour toi, {} pour l'ordinateur, vous avez joué {} manches sur {}".format(score_user,
                                                                                                           score_computer,
                                                                                                           games_played,
                                                                                                           num_games))
    if user_input == "feuille":
        if computer_input == "pierre":
            print("l'ordinateur choisit pierre, tu as gagné la manche")
            score_user += 1
        elif computer_input == "feuille":
            print("l'ordinateur choisit également feuille, match nul sur cette manche")
        else:
            print("l'ordinateur choisit ciseaux, tu as perdu la manche")
            score_computer += 1
        games_played += 1
        print("le score est de {} pour toi, {} pour l'ordinateur, vous avez joué {} parties sur {}".format(score_user,
                                                                                                           score_computer,
                                                                                                           games_played,
                                                                                                           num_games))
    if user_input == "ciseaux":
        if computer_input == "pierre":
            print("l'ordinateur choisit pierre, tu as perdu la manche")
            score_computer += 1
        elif computer_input == "feuille":
            print("l'ordinateur choisit feuille, tu as gagné la manche")
            score_user += 1
        else:
            print("l'ordinateur choisit également ciseaux, match nul sur cette manche")
        games_played += 1
        print("le score est de {} pour toi, {} pour l'ordinateur, vous avez joué {} parties sur {}".format(score_user,
                                                                                                           score_computer,
                                                                                                           games_played,
                                                                                                           num_games))
if score_computer > score_user:
    print("tu as perdu la partie")
elif score_user > score_computer:
    print("tu as gagné la partie")
else:
    print("la partie est terminée, match nul")




